{
  "extends": "tsconfig-jc",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "noEmit": true,
    "lib": ["esnext", "dom"]
  },
  "ts-node": {
    "esm": true,
    "swc": true
  },
  "include": ["src", "scripts"],
  "exclude": ["node_modules"]
}
