{
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "format": "prettier -w .",
    "lint": "eslint \"**/*.{js,ts,jsx,tsx}\"",
    "spellcheck": "cspell \"**\" --no-progress",
    "prepare": "husky install",
    "es:scrape": "npm run es:scrape --workspace es-scraper",
    "es:sync": "npm run es:sync --workspace es-scraper"
  },
  "devDependencies": {
    "@types/eslint": "^8.44.2",
    "@types/mdast": "^4.0.2",
    "@types/node": "^18.16.2",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "cspell": "^6.31.1",
    "eslint": "^8.39.0",
    "eslint-config-jc": "^2.3.3",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "mdn-checker": "workspace:*",
    "prettier": "^2.8.8",
    "prettier-config-jc": "^2.3.0",
    "ts-node": "^10.9.1",
    "tsconfig-jc": "^2.3.1",
    "typescript": "^5.0.4"
  }
}
